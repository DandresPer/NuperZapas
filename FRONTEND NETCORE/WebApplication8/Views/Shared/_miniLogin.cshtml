@model WebApplication8.ModelosVistas.VistaLoginModelo

<form class="px-4 py-3" asp-controller="Cliente" asp-action="Login" method="post">
    <div class="form-group">
        <label for="exampleDropdownFormEmail1">Email address</label>
        <input asp-for="email" type="email" class="form-control" id="exampleDropdownFormEmail1" placeholder="email@example.com"
               formControlName="email">
    </div>
    <div class="form-group">
        <label for="exampleDropdownFormPassword1">Password</label>
        <input asp-for="password" type="password" class="form-control" id="exampleDropdownFormPassword1" placeholder="Password"
               formControlName="pass">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="dropdownCheck">
        <label class="form-check-label" for="dropdownCheck">
            Remember me
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>
